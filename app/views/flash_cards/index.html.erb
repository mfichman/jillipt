<h1>Listing flash_cards</h1>

<table>
  <tr>
    <th>Front</th>
    <th>Back</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flash_cards.each do |flash_card| %>
  <tr>
    <td><%= flash_card.front %></td>
    <td><%= flash_card.back %></td>
    <td><%= link_to 'Show', flash_card %></td>
    <td><%= link_to 'Edit', edit_flash_card_path(flash_card) %></td>
    <td><%= link_to 'Destroy', flash_card, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

